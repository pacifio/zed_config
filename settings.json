{
	"vim_mode": false,
	"current_line_highlight": "all",
	"unnecessary_code_fade": 0.5,
	"icon_theme": {
		"mode": "dark",
		"light": "Zed (Default)",
		"dark": "Zed (Default)",
	},
	"telemetry": {
		"diagnostics": true,
		"metrics": true,
	},
	"base_keymap": "VSCode",
	"status_bar": {
		"experimental.show": false,
	},
	"minimap": {
		"show": "always",
	},
	"cursor_shape": "bar",
	"file_types": {},
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null,
		},
		"enabled_in_text_threads": false,
	},
	"show_edit_predictions": false,
	"terminal": {
		"dock": "bottom",
	},
	"agent": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-7-sonnet-latest",
		},
	},
	"theme": {
		"mode": "dark",
		"light": "Gruvbox Light",
		"dark": "Zen Dark",
	},
	"hide_mouse": "on_typing_and_movement",
	"ui_font_size": 14,
	"buffer_font_size": 14.5,
	"buffer_font_family": "JetBrains Mono",
	"cursor_blink": false,
	"buffer_line_height": {
		"custom": 1.0,
	},
	"format_on_save": "off",
	"formatter": "language_server",
	"show_whitespaces": "none",
	"show_wrap_guides": false,
	"wrap_guides": [
		90
	],
	"tab_size": 2,
	"hard_tabs": true,
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false,
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false,
		"selections_menu": false,
	},
	"scrollbar": {
		"axes": {
			"horizontal": false,
		},
		"show": "never",
	},
	"auto_update": true,
	"indent_guides": {
		"enabled": true,
		"coloring": "fixed",
	},
	"gutter": {
		"folds": false,
		"line_numbers": true,
		"runnables": false,
	},
	"git": {
		"git_gutter": "tracked_files",
		"inline_blame": {
			"enabled": false,
		},
	},
	"languages": {
		"Python": {
			"tab_size": 4,
		},
	},
	"soft_wrap": "prefer_line",
}
